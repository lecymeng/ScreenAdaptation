<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:ignore="HardcodedText,PxUsage">
  
  <Button
    android:layout_width="match_parent"
    android:layout_height="300px"
    android:layout_margin="48px"
    android:background="@color/hunt_blue"
    android:text="Margin-48px"
    android:textAllCaps="false"
    android:textColor="#fff"
    android:textSize="24sp" />
  
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <Button
      android:layout_width="540px"
      android:layout_height="300px"
      android:background="@color/hunt_black"
      android:text="W-540px"
      android:textAllCaps="false"
      android:textColor="#fff"
      android:textSize="28sp" />
    
    <Button
      android:layout_width="540px"
      android:layout_height="300px"
      android:background="@color/hunt_dark"
      android:text="W-540px"
      android:textAllCaps="false"
      android:textColor="#fff"
      android:textSize="28sp" />
  </LinearLayout>
  
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <TextView
      android:layout_width="750px"
      android:layout_height="300px"
      android:background="@color/colorPrimary"
      android:gravity="center"
      android:text="W-750px"
      android:textColor="#0d0"
      android:textSize="20sp" />
    
    <TextView
      android:layout_width="330px"
      android:layout_height="300px"
      android:background="@color/hunt_turquoise"
      android:gravity="center"
      android:text="W-330px"
      android:textColor="#0d0"
      android:textSize="20sp" />
  </LinearLayout>
  
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <TextView
      android:layout_width="450px"
      android:layout_height="match_parent"
      android:background="@color/hunt_red_orange"
      android:gravity="center"
      android:text="W-450px"
      android:textColor="#0d0"
      android:textSize="20sp" />
    
    <TextView
      android:layout_width="360px"
      android:layout_height="match_parent"
      android:background="@color/hunt_yellow"
      android:gravity="center"
      android:text="W-360px"
      android:textColor="#0d0"
      android:textSize="20sp" />
    
    <TextView
      android:layout_width="270px"
      android:layout_height="match_parent"
      android:background="@color/hunt_yel"
      android:gravity="center"
      android:text="W-270px"
      android:textColor="#0d0"
      android:textSize="20sp" />
  </LinearLayout>
</LinearLayout>
